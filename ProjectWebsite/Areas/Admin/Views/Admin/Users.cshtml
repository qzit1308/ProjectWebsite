@model List<ProjectWebsite.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="admin-content">
    <div class="admin-content-header d-flex justify-content-between align-items-center">
        <h2><i class="fas fa-users-cog me-2"></i> @ViewData["Title"]</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
            <i class="fas fa-plus me-2"></i> Add User
        </button>
    </div>

    <div class="admin-table-container mt-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Trạng thái</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>
                                <div class="user-avatar d-flex align-items-center">
                                    <span>@(user.FullName ?? user.Username)</span>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge bg-primary">@user.Role?.RoleName</span>
                            </td>
                            <td>
                                <span class="badge bg-success">Active</span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></button>
                                <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
