@model List<ProjectWebsite.Models.Product>

@{
    ViewData["Title"] = "Tất cả Sách";
}

<h2 class="mb-4"><i class="fas fa-book me-2"></i>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Hình ảnh</th>
                <th>Tên sách</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Giảm giá</th>
                <th>Đánh giá</th>
                <th>Lượt đánh giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.ProductId</td>
                    <td>
                        <img src="@book.ImageUrl" class="img-thumbnail" style="width: 50px; height: 50px;" />
                    </td>
                    <td>@book.ProductName</td>
                    <td>@book.Category?.CategoryName</td>
                    <td>@book.Price.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>
</div>
